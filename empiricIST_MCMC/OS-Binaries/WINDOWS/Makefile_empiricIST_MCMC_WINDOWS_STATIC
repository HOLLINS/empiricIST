CC=g++
CFLAGS=-c -O3 -static -I/local/include/ -I/local/bin/ -I/local/lib/
LDFLAGS=-static -L/local/include/ -L/local/bin/ -L/local/lib/ -lgsl -lgslcblas
SOURCES=empiricIST_MCMC.cpp
OBJECTS=$(SOURCES:.cpp=.o)
EXECUTABLE=empiricIST_MCMC_Static.exe

all: $(SOURCES) $(EXECUTABLE) 
	
$(EXECUTABLE): $(OBJECTS)
	$(CC) $(OBJECTS) $(LDFLAGS) -o $@

.cpp.o:
	$(CC) $(CFLAGS) $< -o $@
